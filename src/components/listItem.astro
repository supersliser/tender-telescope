---
const { title } = Astro.props;
---

<div class="listItemContainer">
    <div class="background">
        <p class="titleItem">{title}</p>
        <ul>
            <slot />
        </ul>
    </div>
</div>

<style>
    @import "@fontsource-variable/quicksand";
    .listItemContainer {
        width: 30%;
        height: max-content;
        background-image: linear-gradient(to right, #1cddff, #7f04e4);
        padding: 0;
        margin: 0;
        border-radius: 15px;
    }

    ul {
        width: 90%;
        height: 70%;
        padding-left: 5%;
        padding-right: 5%;
        padding-bottom: 5%;
        list-style-type: square;
    }

    .background {
        background-color: #11004e;
        width: 95%;
        height: 95%;
        margin: 2.5%;
        border-radius: 15px;
    }

    .titleItem {
        height: 20%;
        padding-top: 5%;
        padding-left: 5%;
        padding-right: 5%;
        width: 90%;
        color: white;
        font-family: "Quicksand Variable", sans-serif;
        font-weight: 600;
        font-size: 2rem;
        text-align: center;
    }
</style>
