---
import Layout from "../../../layouts/ProjectIndexLayout.astro";
import AnimBlock from "../../../components/AnimationBlock.astro";
import Item from "../../../components/Item.astro";
const title = "Renders";
import "../../../styles/Projects.css";
import "../../../styles/HoverUnderline.css";
const pages = await Astro.glob("../renders/*.mdx");

export const prerender = true;
---

<Layout title={title}>
    <div class="basicFill">
        <p class="titleText">
            I am a <span class="hover-underline-animation">3D modeller</span>
        </p>
        <p class="subtitleText">
            These are some of my favourite models, all made by me:
        </p>
    </div>
    <div class="basicFill">
        <div class="items">
            {
                pages.map((page) => 
                    <Item
                        image={page.frontmatter.image}
                        title={page.frontmatter.title}
                        float="right"
                        link={page.url}
                    />
                )
            }
        </div>
    </div>
</Layout>
