---
import Layout from "../../../layouts/ProjectIndexLayout.astro";
import AnimBlock from "../../../components/AnimationBlock.astro";
import Item from "../../../components/Item.astro";
const title = "Renders";
import "../../../styles/Projects.css";
import "../../../styles/HoverUnderline.css";
const pages = await Astro.glob("../programming/*.mdx");
---

<Layout title={title}>
    <div class="basicFill">
        <AnimBlock startLocation="bottom"><p class="titleText">
            I am a <span class="hover-underline-animation">Programmer</span>
        </p></AnimBlock>
        <p class="subtitleText">
            Computers are my life and programming them is my passion. Enjoy some of my favourite projects:
        </p>
    </div>
    <div class="basicFill">
        <div class="items">
            {
                pages.map((page) => 
                    <Item
                        image={page.frontmatter.image}
                        title={page.frontmatter.title}
                        float="right"
                        link={page.url}
                    />
                )
            }
        </div>
    </div>
</Layout>